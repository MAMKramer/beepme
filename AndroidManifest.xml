<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glanznig.beeper"
    android:versionCode="1"
    android:versionName="0.1">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:name=".BeeperApp">
      
	    <activity android:name=".MainMenu" android:label="@string/app_name">
	        <intent-filter>
	            <action android:name="android.intent.action.MAIN" />
	            <category android:name="android.intent.category.LAUNCHER" />
	         </intent-filter>
	    </activity>
	    
	    <activity android:name=".Preferences" android:label="@string/preferences"></activity>
	    
	    <activity android:name=".ListSamplesActivity" android:label="@string/list_samples">
	        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.glanznig.beeper.MainMenu" />
	    </activity>
	    
	    <activity android:name=".NewSampleActivity" android:label="@string/new_sample">
	        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.glanznig.beeper.MainMenu" />
	    </activity>
	    
	    <activity android:name=".ViewSampleActivity" android:label="@string/view_sample">
	        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.glanznig.beeper.ListSamplesActivity" />
	    </activity>
	    
	  </application>

</manifest>
