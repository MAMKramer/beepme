<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glanznig.beepme"
    android:versionCode="13"
    android:versionName="1.3.2"
    android:installLocation="auto">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8" />
    
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    
    <application android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".BeeperApp"
        android:allowBackup="false">
      
	    <activity
	        android:name=".view.MainMenu"
	        android:label="@string/app_name"
	        android:screenOrientation="portrait">
	        <intent-filter>
	            <action android:name="android.intent.action.MAIN" />
	            <category android:name="android.intent.category.LAUNCHER" />
	         </intent-filter>
	    </activity>
	    
	    <activity android:name=".view.Preferences" android:label="@string/preferences"></activity>
	    
	    <activity android:name=".view.AboutActivity" android:label="@string/about"></activity>
	    
	    <activity android:name=".view.BeepActivity" android:label="@string/beep"
	        android:launchMode="singleTask"
	        android:screenOrientation="portrait">
	    </activity>
	    
	    <activity android:name=".view.ListSamplesActivity" android:label="@string/list_samples">
	        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.glanznig.beepme.view.MainMenu" />
	    </activity>
	    
	    <activity android:name=".view.NewSampleActivity" android:label="@string/new_sample" android:windowSoftInputMode="adjustResize">
	        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.glanznig.beepme.view.MainMenu" />
	    </activity>
	    
	    <activity android:name=".view.EditSampleActivity" android:label="@string/edit_sample" android:windowSoftInputMode="adjustResize">
	        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.glanznig.beepme.view.ViewSampleActivity" />
	    </activity>
	    
	    <activity android:name=".view.ViewSampleActivity" android:label="@string/view_sample">
	        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.glanznig.beepme.view.ListSamplesActivity" />
	    </activity>
	    
	    <receiver android:name=".helper.PhoneStateReceiver">
	        <intent-filter>
	            <action android:name="android.intent.action.PHONE_STATE">
	            </action>
	        </intent-filter>
	    </receiver>
	    
	  </application>

</manifest>
