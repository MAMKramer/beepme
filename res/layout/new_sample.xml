<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
 	xmlns:f="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >
       
    <LinearLayout
        android:id="@+id/new_sample_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingBottom="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/new_sample_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/new_sample_btn_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:height="80dp"
                android:onClick="onClickTakePhoto"
                android:text="@string/action_take_photo"
                android:width="120dp" />

            <ProgressBar
                android:id="@+id/new_sample_image_load"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/new_sample_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:contentDescription="thumb"
                android:longClickable="true"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/new_sample_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/sample_title"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/new_sample_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ems="10"
            android:inputType="text" >

            <requestFocus />
        </EditText>
        
        <TextView
            android:id="@+id/new_sample_help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_title_help" />

        <TextView
            android:id="@+id/new_sample_label_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/sample_description"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/new_sample_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="5" />
        
        <TextView
            android:id="@+id/new_sample_help_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_description_help" />
        
        <TextView
            android:id="@+id/new_sample_label_keywords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/sample_keywords"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <AutoCompleteTextView
                android:id="@+id/new_sample_add_keyword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/new_sample_btn_add_keyword" />

            <Button
                android:id="@+id/new_sample_btn_add_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:onClick="onClickAddKeyword"
                android:text="@string/add" />
        </RelativeLayout>
        
        <TextView
            android:id="@+id/new_sample_help_keywords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_keywords_help" />
        
        <com.glanznig.beepme.view.TagButtonContainer
            android:id="@+id/new_sample_keyword_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            f:horizontalSpacing="4dp"
            f:verticalSpacing="4dp" />

    </LinearLayout>

</ScrollView>