<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="NewSampleActivity" >

    <TextView
        android:id="@+id/new_sample_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/new_sample_label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_title" />

    <EditText
        android:id="@+id/new_sample_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/new_sample_label_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_description" />

    <EditText
        android:id="@+id/new_sample_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" />

    <CheckBox
        android:id="@+id/new_sample_accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accepted" />

    <Button
        android:id="@+id/new_sample_btn_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo"
        android:onClick="onClickTakePhoto" />

    <ImageView
        android:id="@+id/new_sample_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="thumb" />

    <Button
        android:id="@+id/new_sample_btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:onClick="onClickSave" />

</LinearLayout>