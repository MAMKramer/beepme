<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/new_sample_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/bottom_bar"
        android:gravity="center"
        android:orientation="horizontal" >

	    <Button
	        android:id="@+id/new_sample_btn_save"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        android:onClick="onClickSave"
	        android:text="@string/save" />

	    <Button
	        android:id="@+id/new_sample_btn_cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/cancel"
	        android:onClick="onClickCancel"
	        android:visibility="gone" />

	</LinearLayout>
	
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/new_sample_buttons"
        android:layout_alignParentTop="true" >
        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="top|center_horizontal"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="5dp"
	        android:fillViewport="true"
	        android:orientation="vertical"
	        android:paddingBottom="8dp" >

		    <TextView
		        android:id="@+id/new_sample_timestamp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:layout_marginTop="5dp"
		        android:text=""
		        android:textSize="17dp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/new_sample_label_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:text="@string/sample_title"
		        android:textSize="17dp"
		        android:textStyle="bold" />
		
		    <EditText
		        android:id="@+id/new_sample_title"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="3dp"
		        android:ems="10"
		        android:inputType="text" >
		
		        <requestFocus />
		    </EditText>
		
		    <TextView
		        android:id="@+id/new_sample_label_description"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="@string/sample_description"
		        android:textSize="17dp"
		        android:textStyle="bold" />
		
		    <EditText
		        android:id="@+id/new_sample_description"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="3dp"
		        android:ems="10"
		        android:gravity="top"
		        android:inputType="textMultiLine"
		        android:lines="5" />
		
		    <CheckBox
		        android:id="@+id/new_sample_accepted"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="accepted" />
		
		    <Button
		        android:id="@+id/new_sample_btn_photo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Photo"
		        android:onClick="onClickTakePhoto" />
		
		    <ImageView
		        android:id="@+id/new_sample_thumb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:contentDescription="thumb"
		        android:visibility="gone" />
		    
		</LinearLayout>
	</ScrollView>

</RelativeLayout>