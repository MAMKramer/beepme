<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/beep_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/beep_icon" />

	<LinearLayout
	    android:id="@+id/beep_buttons"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/beep_icon"
	    android:layout_alignParentBottom="true"
	    android:orientation="vertical" >
	    
	    <Button
	        android:id="@+id/beep_btn_accept"
	        android:layout_width="match_parent"
	        android:layout_height="60dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="50dp"
	        android:text="@string/beep_accept"
	        android:onClick="onClickAccept" />
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp" >
	
	        <Button
	            android:id="@+id/beep_btn_decline"
	            android:layout_width="wrap_content"
	            android:layout_height="60dp"
	            android:layout_alignParentLeft="true"
	            android:text="@string/beep_decline"
	            android:onClick="onClickDecline" />
	
	        <Button
	            android:id="@+id/beep_btn_decline_pause"
	            android:layout_width="wrap_content"
	            android:layout_height="60dp"
	            android:layout_alignParentRight="true"
	            android:text="@string/beep_decline_pause"
	            android:onClick="onClickDeclinePause" />
	
	    </RelativeLayout>
	
	    <TextView
	        android:id="@+id/beep_today"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_marginTop="10dp"
	        android:text="@string/today" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="15dp"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp" >
	
	        <TextView
	            android:id="@+id/beep_accepted_today"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dp"
	            android:layout_weight="0.5" />
	
	        <TextView
	            android:id="@+id/beep_declined_today"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:layout_weight="0.5" />
	
	    </LinearLayout>
	</LinearLayout>
</RelativeLayout>