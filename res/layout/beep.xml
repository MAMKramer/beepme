<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/black">
    
    <TextView
        android:id="@+id/beep_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:paddingBottom="20dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-thin"
        android:textSize="30sp" />
    
    <LinearLayout
	    android:id="@+id/beep_stats_today"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/beep_app_name"
	    android:gravity="center"
	    android:orientation="vertical" >
	    
        <LinearLayout
            android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	android:layout_marginBottom="5dp"
	    	android:orientation="horizontal">
	        <TextView
				android:id="@+id/beep_accepted_today"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableLeft="@drawable/ic_beep_stat_accepted_white"
				android:drawablePadding="3dp"
				android:gravity="center"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:fontFamily="sans-serif-thin" />
	     
			<TextView
				android:id="@+id/beep_declined_today"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="8dp"
				android:drawableLeft="@drawable/ic_beep_stat_declined_white"
				android:drawablePadding="3dp"
				android:gravity="center"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:fontFamily="sans-serif-thin" />
        </LinearLayout>
     
     	<TextView
			android:id="@+id/beep_elapsed_today"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="8dp"
			android:drawableLeft="@drawable/ic_beep_stat_elapsed_white"
			android:drawablePadding="3dp"
			android:gravity="center"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:fontFamily="sans-serif-thin" />
     	
     	<TextView
			android:id="@+id/beep_today"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="sans-serif-thin"
			android:textColor="@color/white"
			android:paddingTop="10dp"
			android:textSize="22sp"
			android:text="@string/today" />
    
    </LinearLayout>

	<LinearLayout
	    android:id="@+id/beep_buttons"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@id/beep_stats_today"
	    android:layout_alignParentBottom="true"
	    android:orientation="vertical" >
	    
	    <Button
	        android:id="@+id/beep_btn_accept"
	        android:layout_width="match_parent"
	        android:layout_height="60dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="50dp"
	        android:text="@string/beep_accept"
	        android:onClick="onClickAccept" />
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp" >
	
	        <Button
	            android:id="@+id/beep_btn_decline"
	            android:layout_width="wrap_content"
	            android:layout_height="60dp"
	            android:layout_alignParentLeft="true"
	            android:text="@string/beep_decline"
	            android:onClick="onClickDecline" />
	
	        <Button
	            android:id="@+id/beep_btn_decline_pause"
	            android:layout_width="wrap_content"
	            android:layout_height="60dp"
	            android:layout_alignParentRight="true"
	            android:text="@string/beep_decline_pause"
	            android:onClick="onClickDeclinePause" />
	
	    </RelativeLayout>
	
	</LinearLayout>
	
</RelativeLayout>