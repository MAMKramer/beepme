<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <Button
        android:id="@+id/btn_main_menu_samples_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/main_menu_samples_list"
        android:onClick="onClickListSamples" />
    
    <Button
        android:id="@+id/btn_main_menu_beep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/main_menu_beep"
        android:onClick="onClickBeep" />

    <Button
        android:id="@+id/btn_main_menu_beeper_state_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="onClickBeeperStateToggle" />

</LinearLayout>
